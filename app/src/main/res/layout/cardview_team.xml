<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_game"
        android:layout_width="265dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardView_game_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_team_cardview_backgroud">

            <ImageView
                android:id="@+id/cardView_team_plus"
                android:layout_width="51dp"
                android:layout_height="52dp"
                android:scaleType="centerInside"
                android:src="@drawable/nothing"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardView_team_logo_backgroud"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/team_logo_backgroud"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cardView_team_color0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle"
                app:layout_constraintStart_toEndOf="@+id/cardView_team_logo_backgroud"
                app:layout_constraintTop_toBottomOf="@+id/cardView_team_name" />

            <ImageView
                android:id="@+id/cardView_team_color1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle"
                app:layout_constraintStart_toEndOf="@+id/cardView_team_color0"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color0" />

            <ImageView
                android:id="@+id/cardView_team_color2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle"
                app:layout_constraintStart_toEndOf="@+id/cardView_team_color1"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color1" />

            <ImageView
                android:id="@+id/cardView_team_color3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle"
                app:layout_constraintStart_toEndOf="@+id/cardView_team_color2"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color2" />

            <ImageView
                android:id="@+id/cardView_team_color4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/circle"
                app:layout_constraintStart_toEndOf="@+id/cardView_team_color3"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color3" />

            <TextView
                android:id="@+id/cardView_team_player0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D3"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_team_color0"
                app:layout_constraintEnd_toEndOf="@+id/cardView_team_color0"
                app:layout_constraintStart_toStartOf="@+id/cardView_team_color0"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color0" />

            <TextView
                android:id="@+id/cardView_team_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D3"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_team_color1"
                app:layout_constraintEnd_toEndOf="@+id/cardView_team_color1"
                app:layout_constraintStart_toStartOf="@+id/cardView_team_color1"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color1" />

            <TextView
                android:id="@+id/cardView_team_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D3"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_team_color2"
                app:layout_constraintEnd_toEndOf="@+id/cardView_team_color2"
                app:layout_constraintStart_toStartOf="@+id/cardView_team_color2"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color2" />

            <TextView
                android:id="@+id/cardView_team_player3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D3"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_team_color3"
                app:layout_constraintEnd_toEndOf="@+id/cardView_team_color3"
                app:layout_constraintStart_toStartOf="@+id/cardView_team_color3"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color3" />

            <TextView
                android:id="@+id/cardView_team_player4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D3"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_team_color4"
                app:layout_constraintEnd_toEndOf="@+id/cardView_team_color4"
                app:layout_constraintStart_toStartOf="@+id/cardView_team_color4"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_color4" />

            <TextView
                android:id="@+id/cardView_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="젠지 이스포츠"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cardView_team_logo_backgroud"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cardView_team_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerInside"
                android:src="@drawable/nothing"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_team_logo_backgroud"
                app:layout_constraintEnd_toEndOf="@+id/cardView_team_logo_backgroud"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="@+id/cardView_team_logo_backgroud"
                app:layout_constraintTop_toTopOf="@+id/cardView_team_logo_backgroud" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>



