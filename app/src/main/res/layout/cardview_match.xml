<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_game"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardView_game_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_team_cardview_backgroud">

            <ImageView
                android:id="@+id/cardView_match_plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/nothing" />

            <TextView
                android:id="@+id/cardView_match_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="BTG VS SKT T1"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardView_match_team0_back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/team_logo_backgroud"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView_match_name" />

            <TextView
                android:id="@+id/cardView_match_team1_back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/team_logo_backgroud"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardView_match_team0_back" />

            <ImageView
                android:id="@+id/cardView_match_team0"
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_match_team0_back"
                app:layout_constraintEnd_toEndOf="@+id/cardView_match_team0_back"
                app:layout_constraintStart_toStartOf="@+id/cardView_match_team0_back"
                app:layout_constraintTop_toTopOf="@+id/cardView_match_team0_back"
                app:srcCompat="@drawable/amumu" />

            <ImageView
                android:id="@+id/cardView_match_team1"
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_match_team1_back"
                app:layout_constraintEnd_toEndOf="@+id/cardView_match_team1_back"
                app:layout_constraintStart_toStartOf="@+id/cardView_match_team1_back"
                app:layout_constraintTop_toTopOf="@+id/cardView_match_team1_back"
                app:srcCompat="@drawable/anibia" />

            <TextView
                android:id="@+id/cardView_match_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="vs"
                android:textColor="#000000"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_match_team0_back"
                app:layout_constraintEnd_toStartOf="@+id/cardView_match_team1_back"
                app:layout_constraintStart_toEndOf="@+id/cardView_match_team0_back"
                app:layout_constraintTop_toTopOf="@+id/cardView_match_team0_back" />

            <TextView
                android:id="@+id/cardView_match_team0_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="BTG"
                android:textColor="@color/colorBlueTeam"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/cardView_match_team0_back"
                app:layout_constraintStart_toStartOf="@+id/cardView_match_team0_back"
                app:layout_constraintTop_toBottomOf="@+id/cardView_match_team0_back" />

            <TextView
                android:id="@+id/cardView_match_team1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="SKT T1"
                android:textColor="@color/colorRedTeam"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/cardView_match_team1_back"
                app:layout_constraintStart_toStartOf="@+id/cardView_match_team1_back"
                app:layout_constraintTop_toBottomOf="@+id/cardView_match_team1_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>



